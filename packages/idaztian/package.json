{
    "name": "idaztian",
    "version": "0.1.0",
    "description": "Obsidian-style live-preview markdown editor framework for the web",
    "license": "GPL-3.0",
    "type": "module",
    "main": "./dist/idaztian.umd.cjs",
    "module": "./dist/idaztian.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/idaztian.js",
            "require": "./dist/idaztian.umd.cjs",
            "types": "./dist/index.d.ts"
        },
        "./style.css": "./dist/style.css"
    },
    "unpkg": "./dist/idaztian.umd.cjs",
    "jsdelivr": "./dist/idaztian.umd.cjs",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite build --watch",
        "build": "tsc && vite build",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "docs": "typedoc src/index.ts"
    },
    "dependencies": {
        "@codemirror/autocomplete": "^6.20.0",
        "@codemirror/commands": "^6.7.1",
        "@codemirror/lang-markdown": "^6.3.2",
        "@codemirror/language": "^6.10.6",
        "@codemirror/language-data": "^6.5.1",
        "@codemirror/search": "^6.5.8",
        "@codemirror/state": "^6.5.0",
        "@codemirror/view": "^6.36.3",
        "@lezer/markdown": "^1.4.0",
        "@types/katex": "^0.16.8",
        "@types/turndown": "^5.0.6",
        "katex": "^0.16.28",
        "turndown": "^7.2.2"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "^2.1.9",
        "@vitest/ui": "^2.1.9",
        "jsdom": "^26.0.0",
        "typedoc": "^0.28.17",
        "typescript": "^5.4.0",
        "vite": "^6.1.0",
        "vite-plugin-dts": "^4.5.0",
        "vitest": "^2.1.9"
    },
    "keywords": [
        "markdown",
        "editor",
        "live-preview",
        "codemirror",
        "wysiwyg"
    ]
}